  <script>
    // Create stars and animate horizontally in subtle float

    const starsContainer = document.getElementById('stars');
    const starCount = 70;

    for(let i=0; i < starCount; i++) {
      const star = document.createElement('div');
      star.classList.add('star');

      // random size 1px to 3px
      const size = Math.random() * 2 + 1;
      star.style.width = size + 'px';
      star.style.height = size + 'px';

      // random position inside viewport
      star.style.top = (Math.random() * 100) + 'vh';
      star.style.left = (Math.random() * 100) + 'vw';

      // random animation direction & duration 6s to 12s
      const direction = Math.random() < 0.5 ? 'floatRight' : 'floatLeft';
      const duration = (Math.random() * 6 + 6).toFixed(2);

      star.style.animationName = direction;
      star.style.animationDuration = duration + 's';

      starsContainer.appendChild(star);
    }
  </script>
